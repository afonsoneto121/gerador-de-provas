{
  "compilerOptions": {
    "target": "es2017",                                  
    "module": "commonjs",                                
    "lib": ["ES6"],                                        
    "outDir": "./dist",                                   
    "rootDir": "./src",                                  
    "baseUrl": ".",   
    "removeComments": true,                           
    "esModuleInterop": true,
    "resolveJsonModule": true,                                                       
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,            
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_module",
    "coverage",
    "./dist"
  ]
}
