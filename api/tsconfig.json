{
  "compilerOptions": {
    "target": "es2017",                                  
    "lib": ["ES6"],                                        
    "module": "commonjs",                                
    "rootDir": "./src",                                  
    "baseUrl": ".",   
    "resolveJsonModule": true,                        
    "allowJs": true,                                  
    "outDir": "./dist",                                   
    "removeComments": true,                           
    "esModuleInterop": true,
    "strictPropertyInitialization": false,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "skipLibCheck": true,
    "composite": true,
    "sourceMap": true
  }
}
